{
  "name": "learnx-backend",
  "version": "1.0.0",
  "description": "Backend API for LearnX - Remote Classroom Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo 'No build step needed for Node.js'",
    "postinstall": "echo 'Backend dependencies installed successfully'"
  },
  "keywords": [
    "education",
    "remote-learning",
    "webrtc",
    "nodejs",
    "express",
    "postgresql"
  ],
  "author": "LearnX Team",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/speech": "^7.2.0",
    "@google-cloud/translate": "^9.2.0",
    "@google/generative-ai": "^0.24.1",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "pdf-parse": "^1.1.1",
    "pdfkit": "^0.15.0",
    "pg": "^8.16.3",
    "socket.io": "^4.7.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
